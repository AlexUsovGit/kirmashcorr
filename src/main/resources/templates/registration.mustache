<body style="line-height: 1">
<div align="center"><h3> Добавить нового пользователя</h3></div>
<p style="    text-align: center;    color: red;">
    {{#message}}
        {{message}}
    {{/message}}
</p>
<div align="center">
    <form action="/registration" method="post" class="form-group">
        <div>
            <table align="center" border="0" cellpadding="2" cellspacing="1" style="width:50%">
                <tbody>
                <tr>
                    <td style="text-align:right"><p>Имя нового пользователя:</p></td>
                    <td><input name="username" type="text" style="margin: 10px"/></td>
                    <td><p>только на латинице (pinsk_1, minsk_8)</p></td>
                </tr>
                <tr>
                    <td style="text-align:right">Пароль:</td>
                    <td><input name="password" type="text" style="margin: 10px"/></td>
                    <td><p>только на латинице</p></td>
                </tr>
                <tr>
                    <td style="text-align:right"><p>Название магазина:</p></td>
                    <td><input name="storeName" type="text" style="margin: 10px"/></td>
                    <td><p>например: Хит, Простор</p></td>
                </tr>
                <tr>
                    <td style="text-align:right">Роль:</td>
                    <td><input name="role" type="text"  style="margin: 10px" value="USER"/></td>
                    <td><p>ТОЛЬКО USER</p></td>
                </tr>
                <tr>
                    <td style="text-align:right">Доступ к админке</td>
                    <td><input name="showAdmin" type="checkbox"/></td>
                </tr>
                <tr>
                    <td style="text-align:right">Доступ к складу</td>
                    <td><input name="showSklad" type="checkbox" checked/></td>
                </tr>
                <tr>
                    <td style="text-align:right">Доступ к отчетам</td>
                    <td><input name="showReport" type="checkbox" checked/></td>
                </tr>
                <tr>
                    <td style="text-align:right">Доступ к магазинам</td>
                    <td><input name="showStore" type="checkbox" checked/></td>
                </tr>
                <tr>
                    <td><input name="_csrf" type="hidden" value="{{_csrf.token}}"/></td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td><input type="submit" class="btn btn-success " style="margin: 10px" value="Зарегистрировать"/></td>
                </tr>
                </tbody>
            </table>
        </div>
    </form>
