<body style="line-height: 1">
<div class="row-flex shadow p-3  bg-white rounded">

   <div class="row ">
      <div class="col-md-2"><a class="btn btn-info" href="/dictionary" role="button">Администрирование</a>
      </div>
      <div class="col-md-2 offset-md-8 ">
         <form action="/logout" method="post" class="form-group text-right ">
            <input name="_csrf" type="hidden" value="{{_csrf.token}}"/>
            <div class="text-right"><input type="submit" value="Выйти" class="btn btn-secondary"/></div>
         </form>


      </div>
   </div>


   <div class="row">
      <div class=" col-md-4"></div>
      <div class=" col-md-4">

         <form method="post" class="form-inline" action="/productnameAdd">
            <input type="hidden" name="_csrf" value="{{_csrf.token}}">
            <div class=" col-md-8"><input type="text" class="form-control" name="label" placeholder="Наименование">
            </div>
            <div class=" col-md-4">
               <button type="submit" class="btn btn-success ">Добавить</button>
            </div>
         </form>
      </div>
   </div>

   <div class="row mt-3">
      <div class="col-md-12">
         <table class="table table-striped table-hover centered table-sm">
            <thead class="thead-dark">
            <tr style="text-align:center; font-size:16px">

               <th style="width: 6%; ">Id</th>
               <th style="width: 25%; ">Наименование</th>
               <th style="width: 6%; ">Подразделение</th>
               <th style="width: 6%; ">Статус</th>
               <th style="width: 25%; ">Дата обновления</th>
               <th style="width: 1%; "></th>
               <th style="width: 1%; "></th>

            </tr>
            </thead>
            <tbody>
            {{#productNames}}
               <div>


                  <tr style="text-align:left; font-size:18px">
                     <td>{{id}}</td>
                     <td>{{label}}</td>
                     <td>{{storeName}}</td>
                     <td>{{isActive}}</td>
                     <td>{{lastUpdate}}</td>
                     <td >
                        <form method="post" action="/editproductname">
                           <input type="hidden" name="_csrf" value="{{_csrf.token}}">
                           <input type="text" name="id" value="{{id}}" style="display: none">
                           <button type="submit" class="edit-btn"></button>
                        </form>
                     </td>
                     <td>
                        <form method="post" action="/deleteproductname"
                              onsubmit="return confirm('Вы действительно хотите удалить наименование товара из справочника?');">
                           <input type="hidden" name="_csrf" value="{{_csrf.token}}">
                           <input type="text" name="id" value="{{id}}" style="display: none">
                           <button type="submit" class="delete-btn"></button>
                        </form>


                     </td>

                  </tr>
               </div>
            {{/productNames}}
            </tbody>
         </table>

      </div>
   </div>
</div>

</body>
